@model Bangazon.Models.OrderViewModels.CompleteOrderViewModel

@{
    ViewData["Title"] = "Complete Your Order";
}

<h2>Select your payment type to complete your order</h2>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CompleteOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Order.OrderId" />
            <input type="hidden" asp-for="Order.CreatedDate" />
            <div class="form-group">
                @Html.LabelFor(model => model.Order.PaymentTypeId)
                @Html.DropDownList(
                   "Order.PaymentTypeId",
                   @Model.PaymentTypeId,
                   new
                   {
                       @name = "Order.PaymentTypeId"
                   }
               )
                <span asp-validation-for="@Model.Order.PaymentTypeId" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Done" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
